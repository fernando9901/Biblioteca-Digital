<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Livros</h1>
  <a href="/livros/cadastrar" class="btn btn-success">Cadastrar Livro</a>
</div>

{{#if livros.length}}
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Título</th>
        <th>Autor</th>
        <th>ISBN</th>
        <th>Categoria</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      {{#each livros}}
        <tr>
          <td>{{this.titulo}}</td>
          <td>{{this.autor}}</td>
          <td>{{this.isbn}}</td>
          <td>{{this.categoria}}</td>
          <td>
            <a href="/livros/{{this._id}}/editar" class="btn btn-sm btn-primary">Editar</a>
            <form action="/livros/{{this._id}}/deletar" method="POST" class="d-inline">
              <button type="submit" class="btn btn-sm btn-danger">Deletar</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <nav aria-label="Page navigation">
    <ul class="pagination">
      {{#if hasPreviousPage}}
        <li class="page-item">
          <a class="page-link" href="?page={{subtract currentPage 1}}">Anterior</a>
        </li>
      {{/if}}
      
      <li class="page-item active">
        <span class="page-link">{{currentPage}}</span>
      </li>
      
      {{#if hasNextPage}}
        <li class="page-item">
          <a class="page-link" href="?page={{add currentPage 1}}">Próxima</a>
        </li>
      {{/if}}
    </ul>
  </nav>
{{else}}
  <div class="alert alert-info">Nenhum livro cadastrado</div>
{{/if}}